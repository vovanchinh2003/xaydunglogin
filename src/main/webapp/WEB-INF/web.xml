<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>XAYDUNGLOGIN_PAGE</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>

	<servlet>

		<servlet-name>XAYDUNGLOGIN.PAGE.BAI01.LoginServlet</servlet-name>
		<servlet-class>XAYDUNGLOGIN.PAGE.BAI01.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>XAYDUNGLOGIN.PAGE.BAI01.LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>config</servlet-name>
		<jsp-file>/welcome.jsp</jsp-file>
		<init-param>
			<param-name>username</param-name>
			<param-value>Võ Văn Chính</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>chinh@2003</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>config</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>


</web-app>